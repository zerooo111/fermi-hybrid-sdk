{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "types": ["node"],
    "outDir": "./dist",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "examples/**/*.ts"]
}
